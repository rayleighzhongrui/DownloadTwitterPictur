{
  "manifest_version": 3,
  "name": "点赞下载推特&PIXIV原图(DownloadTwitterAndPixivOriginImageByFavorite)",
  "version": "0.81",
  "description": "在推特、PIXIV中点赞可立即下载原图，默认文件名为博主+推文ID+时间; Download Twitter and Pixiv Origin Image with Favorites",
  "icons": {
    "48": "images/icon.png"
  },
  "permissions": [
    "downloads",
    "declarativeNetRequest",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*",  
        "*://*.pixiv.net/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Twitter&Pixiv Image Downloader"
  },
  "host_permissions": [
    "*://*.pixiv.net/*",
    "*://i.pximg.net/*",
    "*://pixiv.zhongrui.app/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
